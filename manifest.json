{
  "manifest_version": 3,
  "name": "JobApply Assist (MVP)",
  "version": "0.2.0",
  "description": "Autofill job application fields using saved profile + heuristics.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "JobApply Assist",
    "default_popup": "popup.html"
  },
  "commands": {
    "fill-basics": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Fill basic contact fields"
    },
    "fill-links": {
    "suggested_key": { "default": "Alt+2" },
    "description": "Fill links (LinkedIn, GitHub, Portfolio)"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}

